{
  "name": "typescript-template",
  "version": "0.0.1",
  "description": "My personal typescript template for building backend application",
  "author": "@NotKaskus",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run build && NODE_ENV=production && node ./dist/index.js",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier --write --log-level=warn \"{src,tests,scripts}/**/*.{ts,json}\"",
    "prepare": "husky",
    "typecheck": "tsc -b src",
    "build": "tsup",
    "watch": "tsup --watch --onSuccess \"node ./dist/index.js\"",
    "dev": "bun run build && yarn start",
    "bump": "cliff-jumper",
    "check-update": "cliff-jumper --dry-run",
    "clean": "rimraf dist/",
    "tsx": "tsx --experimental-network-imports"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@favware/cliff-jumper": "^2.2.3",
    "@sapphire/eslint-config": "^5.0.3",
    "@sapphire/prettier-config": "^2.0.0",
    "@sapphire/ts-config": "^5.0.0",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NotKaskus/typescript-template"
  },
  "bugs": {
    "url": "https://github.com/NotKaskus/typescript-template/issues"
  },
  "keywords": [
    "NotKaskus",
    "typescript",
    "ts",
    "yarn",
    "bun",
    "template"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "bun@1.0.25",
  "prettier": "@sapphire/prettier-config",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
